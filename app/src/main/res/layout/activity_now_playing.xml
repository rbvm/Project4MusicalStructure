<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background">

    <ImageView
        android:id="@+id/album_art"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/list_item_height"
        android:scaleType="centerInside"
        android:src="@drawable/gramophone" />


    <TextView
        android:id="@+id/back_to_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/back_to_menu_button"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/back_to_main"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/back_to_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_to_main"
        android:background="@color/back_to_media_button"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/back_to_library"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/text_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/current_artist_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/playlist"
            android:gravity="bottom"
            android:text="@string/artist_name"
            android:textAlignment="center"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/song_text_color"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/current_song_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/playlist"
            android:fontFamily="cursive"
            android:gravity="top"
            android:text="@string/song_title"
            android:textAlignment="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/song_text_color"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>